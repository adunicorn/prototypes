<Window x:Class="Client.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Icon="./adunicorn.ico"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" WindowState="Normal"
        Height="350" Width="550">
    <Grid Margin="5">
        <Border CornerRadius="5" BorderBrush="{StaticResource AccentColorBrush}" BorderThickness="3">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentColorBrush}">Adunicorn</Label>
                <Image Grid.Row="1" Source="adunicorn.png"></Image>
                <TextBlock Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="{StaticResource AccentColorBrush}">by <TextBlock FontStyle="Italic" FontWeight="Bold">Aduno</TextBlock></TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
